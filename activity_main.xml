<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#C9E4946E">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E8AD9F">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Pusat tata surya adalah?"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rgJawaban1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/jwb1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asteroid"/>

        <RadioButton
            android:id="@+id/jwb2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matahari"/>

        <RadioButton
            android:id="@+id/jwb3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulan"/>
    </RadioGroup>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8AD9F"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Benda langit yang mengelilingi matahari adalah?"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgJawaban2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <RadioButton
                        android:id="@+id/jwb1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Planet" />

                    <RadioButton
                        android:id="@+id/jwb2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pelangi" />

                    <RadioButton
                        android:id="@+id/jwb3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meteor" />
                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

