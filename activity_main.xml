        <RadioButton
            android:id="@+id/jwb3_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mars"/>
    </RadioGroup>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
