        android:textSize="18sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rgJawaban7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/jwb1_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
